{
    "compilerOptions":{
        "target":"es6",
        "module":"commonjs",
        "outDir":"build",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "watch": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types":[
            "node"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "buildOnSave":true,
    "compileOnSave": true
}